files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/01_migrate_db.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      # Create directories if they don't exist
      mkdir -p /var/app/current/chroma_db
      mkdir -p /var/app/current/data
      # Set proper permissions
      chown -R webapp:webapp /var/app/current/chroma_db
      chown -R webapp:webapp /var/app/current/data
